<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wasuradananjith.mediq.CurrentNumber"
    android:background="@drawable/background">

    <TextView
        android:text="Enter the reference number :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/refNo2"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/refNumber2"
        android:hint="Type here"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/refNo2"
        android:layout_alignEnd="@+id/refNo2"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"/>

    <Button
        android:text="OK"
        android:layout_width="100dp"
        android:layout_marginTop="48dp"
        android:id="@+id/currentNoButton"
        android:onClick="OnPressCurNo"
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorPrimary"
        android:layout_height="40dp"
        android:layout_below="@+id/refNumber2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <ImageView
        app:srcCompat="@drawable/prevarrow"
        android:id="@+id/prev"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>
