<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wasuradananjith.mediq.Request"
    android:background="@drawable/background">

    <ImageView
        app:srcCompat="@drawable/prevarrow"
        android:id="@+id/prev"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:text="Enter the reference number :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/refNo1"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/prev"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/refNumber1"
        android:hint="Type here"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/refNo1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter an appointment number to notify :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notifyNo"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/refNumber1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/notifyNumber"
        android:hint="Type here"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/notifyNo"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send Request"
        android:layout_width="180dp"
        android:id="@+id/requestButton"
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="26dp"
        android:textSize="12dp"
        android:layout_height="40dp"
        android:layout_below="@+id/notifyNumber"
        android:layout_alignStart="@+id/back"
        android:layout_marginStart="34dp" />

    <Button
        android:text="Update"
        android:layout_width="180dp"
        android:id="@+id/updateButton"
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:layout_below="@+id/viewRequests"
        android:layout_alignStart="@+id/viewRequests"
        android:layout_marginTop="13dp"
        android:layout_height="40dp" />

    <Button
        android:text="View All Requests"
        android:id="@+id/viewRequests"
        android:layout_width="180dp"
        android:textSize="12dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="12dp"
        android:layout_height="40dp"
        android:layout_below="@+id/requestButton"
        android:layout_alignStart="@+id/requestButton" />

    <Button
        android:text="Delete"
        android:layout_width="180dp"
        android:id="@+id/deleteButton"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/updateButton"
        android:textSize="12dp"
        android:layout_alignStart="@+id/updateButton" />


</RelativeLayout>
